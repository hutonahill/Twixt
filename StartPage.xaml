<Window x:Class="Twixt.StartPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Start Page" Height="250" Width="300">
    <Grid>
        <!-- New Game Button -->
        <Button Name="NewGameButton" Content="New Game" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" Margin="0,30,0,0" Click="NewGameButton_Click"/>
        
        <!-- Load Game from File Button -->
        <Button Name="LoadFromFileButton" Content="Load Game From File" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" Margin="0,80,0,0" Click="LoadFromFileButton_Click"/>

        <!-- Load Game from Server Button -->
        <Button Name="LoadFromServerButton" Content="Load Game From Server" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" Margin="0,130,0,0" Click="LoadFromServerButton_Click"/>
    </Grid>
</Window>
