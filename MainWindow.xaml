

<Window x:Class="Twixt.MainWindowClass"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Board in Box" Height="1000" Width="1000">
    <Grid>
        <!-- Container for centering the board -->
        <Border BorderBrush="Black" BorderThickness="2" HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Canvas for drawing the board -->
            <Canvas Name="Board" Width="300" Height="300" 
                    MouseLeftButtonDown="Board_MouseLeftButtonDown" 
                    MouseMove="Board_MouseMove"
                    MouseLeave="Board_MouseLeave">
                <!-- The grid will be drawn here -->
            </Canvas>
        </Border>
    </Grid>
</Window>
